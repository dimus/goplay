SciName <- grp:NameGroup !. {
  return newScientificNameNode(grp.([]nameNode))
}

NameGroup <- names:Name+ {
  return newNamesGroup(names)
}

Name <- uni:Uninomial {
  return newNameNode(uni.(uninomialNode))
}

Uninomial <- CapWord {
  return newUninomialNode(string(c.text))
