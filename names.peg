CapWord <- CapChar Word {
  return c.text, nil
}

Word <- Char+ {
  c.state["wrd"]=true
  c.globalStore["wrd"]=true
  return c.text, nil
}

CapChar <- [A-Z] {
  return c.text, nil
}

